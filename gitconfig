[alias]
  co = checkout
  s = status
  unadd = "reset HEAD"
  info = "remote -v"
  forget = "update-index --assume-unchanged"
  l = "log --stat --summary"
  br = branch
  a = add
  b = branch
  d = diff
  v = show
  ll = log
  c = checkout
  cc = commit
  dc = "diff --cached"

[color]
  diff = true
